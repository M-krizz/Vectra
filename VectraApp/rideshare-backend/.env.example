# Postgres
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ride_platform
DB_USER=postgres
DB_PASSWORD=postgres

# JWT (used later)
JWT_SECRET=supersecret_replace_me
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# Redis
REDIS_URL=redis://localhost:6379

# AWS S3 (for document storage)
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret
S3_BUCKET=ride-platform-docs
S3_UPLOAD_EXPIRY_SECONDS=300

# OTP
OTP_TTL_SECONDS=300
OTP_MAX_PER_HOUR=10
OTP_LENGTH=6


JWT_ACCESS_EXPIRES_IN=900            # seconds, e.g., 900 = 15 minutes
JWT_REFRESH_EXPIRES_IN=604800       # seconds, e.g., 7 days
REFRESH_TOKEN_HASH_SALT_ROUNDS=12
PASSWORD_RESET_TOKEN_TTL_SECONDS=3600  # seconds, e.g., 3600 = 1 hour

# reuse existing S3 envs if present:
AWS_REGION=ap-south-1
S3_BUCKET=ride-platform-docs
S3_UPLOAD_EXPIRY_SECONDS=300

# Compliance settings
DOCUMENT_EXPIRY_NOTIFICATION_DAYS=30   # how many days before expiry to notify
DOCUMENT_CHECK_CRON='0 0 * * *'        # daily @ midnight (cron string) â€” set in code as default

